global:
  scrape_interval: {{ scrape_interval | default('15s') }}
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          # - alertmanager:9093

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
        {% for host, host_vars in hostvars.items() %}
        {% if host_vars.vpn_ip is defined %}
        - {{ host_vars.vpn_ip }}:9100  # 使用 VPN IP
        {% endif %}
        {% endfor %}

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']