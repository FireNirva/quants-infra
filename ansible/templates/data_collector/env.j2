# quants-lab 环境变量模板
# 生成的文件: /opt/quants-lab/.env

# 环境
ENVIRONMENT=production

# 数据库（如果需要）
{% if mongo_uri is defined %}
MONGO_URI={{ mongo_uri }}
{% else %}
# MONGO_URI=mongodb://admin:admin@localhost:27017/quants_lab
{% endif %}

{% if mongo_database is defined %}
MONGO_DATABASE={{ mongo_database }}
{% else %}
# MONGO_DATABASE=quants_lab
{% endif %}

# 通知（可选）
{% if telegram_bot_token is defined and telegram_bot_token %}
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN={{ telegram_bot_token }}
TELEGRAM_CHAT_ID={{ telegram_chat_id }}
{% else %}
# TELEGRAM_ENABLED=false
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
{% endif %}

# 其他配置
PYTHONUNBUFFERED=1

